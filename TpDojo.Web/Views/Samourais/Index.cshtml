@model IEnumerable<SamouraiViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Force)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Potentiel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtMartiaux)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var rowClass = item.Potentiel switch
            {
                >= 0 and < 100 => "table-danger",
                >= 30 and < 1000 => "table-warning",
                >= 1000 => "table-success"

            };

            <tr class="@rowClass">
            
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Force)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Potentiel)
            </td>
            <td>
                <img src="@item.Arme?.ImageUrl" width="30" />
                @Html.DisplayFor(modelItem => item.ArmeDisplay)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtMartiauxDisplay)
                </td>
                <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
